<% if @host.env[:locked] == 'false' %>
  <% if @host.env[:edit] == 'true' %>
    <%= erb :index_config %>
  <% else %>
    <button name='on' value='edit'>EDIT</button>
  <% end %>
<% else %>
  <% if @host.app.has_key?(:index) && "#{@host.app[:index]}".length > 0 %>
    <%= erb @host.env[:type].to_sym %>
    <%= erb @host.app[:index] %>
  <% else %>
    <h1><%= @path %></h1>
  <% end %>
<% end %>
