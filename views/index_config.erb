<fieldset style='width: 90%%; height: 100%; overflow-y: scroll;'><legend><%= @path %></legend>
<fieldset>
<legend>user interface</legend>
<p>
<input form='post' id='has_members' type='checkbox' name='app[members]' checked>
<label for='has_members'><span class='material-icons'>people</span>community</label>
</p>
<p>
<input form='post' id='has_merit' type='checkbox' name='app[merit]' checked>
<label for='type_scan'><span class='material-icons'>military_tech</span>merit</label>
</p>
<p>
<input form='post' id='has_chat' type='checkbox' name='app[chat]' checked>
<label for='has_chat'><span class='material-icons'>messenger</span>stream/messenger</label>
</p>
</fieldset>
<fieldset><legend>information</legend>
<p><input form='post' name='env[title]' placeholder='title' value='<%= @host.env[:title] %>'></p>
<p><input form='post' name='env[pitch]' placeholder='pitch' value='<%= @host.env[:pitch] %>'></p>
<p><input form='post' name='env[image]' placeholder='image' value='<%= @host.env[:image] %>'></p>
</fieldset>
<fieldset><legend>content</legend>
<textarea form='post' name='app[index]' placeholder='entity html...' style='width: 100%; height: 50vh;'><%= @host.app[:index] %></textarea>
</fieldset>
<fieldset><legend>information</legend>
<input form='post' id='has_lock' type='checkbox' name='env[locked]' checked>
<label for='has_lock'><span class='material-icons'>lock</span>lock</label>
</fieldset>
<p style='width: 100%; text-align: center;'>
<button form='post' name='do' value='save'>SAVE</button>
</p>
</fieldset>